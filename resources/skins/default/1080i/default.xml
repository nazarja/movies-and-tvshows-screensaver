<window>
    <controls>
            <animation effect="fade" start="0" end="100" time="250">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="250">WindowClose</animation>

        <!-- Images -->
        <control type="group">
            <!-- Background Image -->
            <control type="image" id="1100">
                <description>Fanart Previous</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>1080</height>
                <texture>white.png</texture>
                <colordiffuse>ff000000</colordiffuse>
            </control>

            <!-- Foreground Image -->
            <control type="image" id="2200">
                <description>Fanart Current</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>1080</height>
                <texture></texture>
                <fadetime>800</fadetime>
            </control>
        </control>

        <!-- Background Overlays -->
        <control type="group">
            <visible>String.isEqual(Window.Property(hide_overlay),show)</visible>
            <control type="image">
                <aspectratio>scale</aspectratio>
                <width>1920</width>
                <height>1080</height>
                <texture>white.png</texture>
                <colordiffuse>Window.Property(highlight_color)</colordiffuse>
            </control>
            <control type="image">
                <aspectratio>scale</aspectratio>
                <width>1920</width>
                <height>1080</height>
                <texture>black.png</texture>
            </control>
        </control>

        
        <!-- Time / Weather / logo -->
        <control type="group">
            <top>20</top>

            <control type="image">
                <left>50</left>
                <width>80</width>
                <height>80</height>
                <texture colordiffuse="Window.Property(highlight_color)">kodi.png</texture>
            </control>

            <control type="label">
                <description>Title</description>
                <right>70</right>
                <height>100</height>
                <width>200</width>
                <textcolor>white</textcolor>
                <label>$INFO[Weather.Temperature] [COLOR=ff30ABDB]|[/COLOR] $INFO[System.Time]</label>
                <align>right</align>
                <shadowcolor>ff111111</shadowcolor>
            </control>
        </control>


        <!-- Item Info -->
        <control type="group">
            <top>500</top>
            <left>460</left>
            <height>1080</height>
            <width>1000</width>

            <!-- Panel Background -->
            <control type="image">
                <bottom>500</bottom>
                <left>-460</left>
                <height>470</height>
                <width>1920</width>
                <texture>panel.jpg</texture>
                <colordiffuse>e7000000</colordiffuse>
            </control>
            

            <control type="group">
                <top>60</top>

                <!-- tmdb logo -->
                <control type="image">
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="ff01D277">tmdb.png</texture>
                </control>

                <!-- Rating -->
                <control type="label" id="3300">
                    <left>50</left>
                    <height>32</height>
                    <description>Rating</description>
                    <textcolor>white</textcolor>
                    <label></label>
                    <shadowcolor>ff111111</shadowcolor>
                </control>
                
                <!-- Title -->
                <control type="label" id="4400">
                    <width>600</width>
                    <left>125</left>
                    <height>32</height>
                    <description>Title</description>
                    <textcolor>white</textcolor>
                    <label></label>
                    <shadowcolor>ff111111</shadowcolor>
                </control>
               
                <!-- Poster -->
                <control type="image" id="5500">
                    <top>-150</top>
                    <height>260</height>
                    <width>173.3</width>
                    <left>820</left>
                    <texture diffuse="poster-diffuse.png"></texture>
                    <fadetime>800</fadetime>
                </control>

                <!-- Genres -->
                <control type="label" id="6600">
                    <left>0</left>
                    <top>75</top>
                    <height>32</height>
                    <description>Genres</description>
                    <textcolor>ff999999</textcolor>
                    <label></label>
                </control>
            </control>


            <!-- Plot -->
            <control type="label" id="7700">
                <top>250</top>
                <height>200</height>
                <description>Plot</description>
                <textcolor>ffdddddd</textcolor>
                <label></label>
                <align>center</align>
                <wrapmultiline>true</wrapmultiline>
                <scrolltime>200</scrolltime>
                <autoscroll delay="3000" time="1000" repeat="10000"></autoscroll>
            </control>
        </control>

    <!-- End -->
    </controls>
</window>
