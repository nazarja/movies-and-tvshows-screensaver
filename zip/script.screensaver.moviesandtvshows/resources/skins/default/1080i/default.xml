<window>
    <controls>
            <animation effect="fade" start="0" end="100" time="250">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="250">WindowClose</animation>

        <!-- Images -->
        <control type="group">
            <!-- Background Image -->
            <control type="image">
                <description>Black Background</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>1080</height>
                <texture>white.png</texture>
                <colordiffuse>ff000000</colordiffuse>
            </control>

            <!-- Foreground Image -->
            <control type="image" id="2200">
                <description>Fanart Current</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>1080</height>
                <texture></texture>
                <fadetime>800</fadetime>
            </control>
        </control>


        <!-- Background Overlays -->
        <control type="group">
            <control type="image">
                <visible>String.isEqual(Window.Property(no_color),color)</visible>
                <aspectratio>scale</aspectratio>
                <width>1920</width>
                <height>1080</height>
                <texture>white.png</texture>
                <colordiffuse>Window.Property(highlight_color)</colordiffuse>
            </control>
            <control type="image">
                <visible>String.isEqual(Window.Property(hide_overlay),show)</visible>
                <visible>String.isEqual(Window.Property(darker_overlay),darker)</visible>
                <aspectratio>scale</aspectratio>
                <width>1920</width>
                <height>1080</height>
                <texture>black.png</texture>
            </control>
            <control type="image">
                <visible>String.isEqual(Window.Property(hide_overlay),show)</visible>
                <visible>String.isEqual(Window.Property(darker_overlay),lighter)</visible>
                <aspectratio>scale</aspectratio>
                <width>1920</width>
                <height>1080</height>
                <texture colordiffuse="ff000000">square-grey.png</texture>
            </control>
        </control>

        
        <!-- Time / Weather / logo -->
        <control type="group">
            <top>20</top>
            <width>1920</width>
            

            <control type="image">
                <left>50</left>
                <width>80</width>
                <height>80</height>
                <texture colordiffuse="Window.Property(highlight_color)">kodi.png</texture>
            </control>

            <control type="grouplist">
                <visible>String.isEqual(Window.Property(hide_topbar),show)</visible>
                <top>-980</top>
                <align>right</align>
                <right>50</right>
                <orientation>horizontal</orientation>
                <control type="label">
                    <description>Weather</description>
                    <textcolor>white</textcolor>
                    <label>$INFO[Weather.Conditions] , $INFO[Weather.Temperature]</label>
                    <width>auto</width>
                    <shadowcolor>ff111111</shadowcolor>
                    <visible>Weather.IsFetched</visible>
                    <visible>!String.IsEmpty(Weather.Temperature)</visible>
                </control>
                <control type="label">
                    <width>auto</width>
                    <textcolor>Window.Property(highlight_color)</textcolor>
                    <label>  -  </label>
                    <visible>!String.IsEmpty(Weather.Temperature)</visible>
                    <visible>Weather.IsFetched</visible>
                </control>
                <control type="label">
                    <description>Date</description>
                    <textcolor>white</textcolor>
                    <label>$INFO[System.Date]</label>
                    <shadowcolor>ff111111</shadowcolor>
                    <width>auto</width>
                </control>
                <control type="label">
                    <width>auto</width>
                    <textcolor>Window.Property(highlight_color)</textcolor>
                    <label>  -  </label>
                </control>
                <control type="label">
                    <description>Time</description>
                    <textcolor>white</textcolor>
                    <label>$INFO[System.Time]</label>
                    <shadowcolor>ff111111</shadowcolor>
                    <width>auto</width>
                </control>
            </control>
        </control>


        <!-- Item Info -->
        <control type="group">
            <visible>String.isEqual(Window.Property(hide_information),show)</visible>

            <!-- Panel Background -->
            <control type="image">
                <bottom>0</bottom>
                <height>350</height>
                <width>1920</width>
                <texture>panel.jpg</texture>
                <colordiffuse>e7000000</colordiffuse>
            </control>
            

            <control type="group">
                <width>1220</width>

                <!-- tmdb logo -->
                <control type="image">
                    <left>250</left>
                    <bottom>290</bottom>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="ff01D277">tmdb.png</texture>
                </control>

                <!-- Rating -->
                <control type="label" id="3300">
                    <left>300</left>
                    <bottom>290</bottom>
                    <height>32</height>
                    <description>Rating</description>
                    <textcolor>white</textcolor>
                    <label></label>
                    <shadowcolor>ff111111</shadowcolor>
                </control>
                
                <!-- Title -->
                <control type="label" id="4400">
                    <left>360</left>
                    <bottom>290</bottom>
                    <height>32</height>
                    <description>Title</description>
                    <textcolor>white</textcolor>
                    <label></label>
                    <shadowcolor>ff111111</shadowcolor>
                </control>
               
                <!-- Genres -->
                <control type="label" id="6600">
                    <left>250</left>
                    <bottom>250</bottom>
                    <height>32</height>
                    <description>Genres</description>
                    <textcolor>ff999999</textcolor>
                    <label></label>
                </control>

                <!-- Poster -->
                <control type="image" id="5500">
                    <bottom>250</bottom>
                    <height>400</height>
                    <width>266</width>
                    <left>1370</left>
                    <texture diffuse="poster-diffuse.png"></texture>
                    <fadetime>800</fadetime>
                </control>
            </control>


            <!-- Plot -->
            <control type="label" id="7700">
                <left>250</left>
                <right>250</right>
                <bottom>20</bottom>
                <height>190</height>
                <description>Plot</description>
                <textcolor>ffdddddd</textcolor>
                <label></label>
                <wrapmultiline>true</wrapmultiline>
                <scrolltime>200</scrolltime>
                <autoscroll delay="3000" time="1000" repeat="10000"></autoscroll>
            </control>
        </control>

    <!-- End -->
    </controls>
</window>
